{
  "name": "Dashy",
  "version": "latest",
  "slug": "dashy",
  "url": "https://dashy.to/",
  "init": false,
  "description": "Dashy is an open source, highly customizable, easy to use, privacy-respecting dashboard app",
  "webui": "http://[HOST]:[PORT:8080]",
  "stage": "stable",
  "arch": [
    "aarch64",
    "amd64",
    "armv7"
  ],
  "image": "ghcr.io/lissy93/dashy",
  "ports": {
    "8080/tcp": 8080
  },
  "ports_description": {
    "8080/tcp": "Web interface"
  },
  "options": {
    "page_title": "Dashy",
    "description": "My Home Dashboard",
    "theme": "default",
    "language": "en",
    "layout": "auto",
    "icon_size": "medium",
    "hide_settings": false,
    "hide_footer": false,
    "enable_multi_tasking": true,
    "custom_css": ""
  },
  "schema": {
    "page_title": "str?",
    "description": "str?",
    "theme": "list(default|colorful|nord|nord-frost|material|material-dark|dracula|high-contrast-light|high-contrast-dark|one-dark|glass)?",
    "language": "list(en|de|es|fr|it|nl|pt|ru|zh)?",
    "layout": "list(auto|horizontal|vertical)?",
    "icon_size": "list(small|medium|large)?",
    "hide_settings": "bool?",
    "hide_footer": "bool?",
    "enable_multi_tasking": "bool?",
    "custom_css": "str?"
  },
  "map": ["addon_config:rw"]
}
