ARG BUILD_FROM=mostafawahied/portracker:latest
FROM $BUILD_FROM

# Set shell
SHELL ["/bin/bash", "-o", "pipefail", "-c"]

# Install required packages for Home Assistant addon compatibility
RUN apt-get update \
    && apt-get install -y --no-install-recommends \
        bashio \
        jq \
    && rm -rf /var/lib/apt/lists/*

# Copy run script
COPY run.sh /
RUN chmod a+x /run.sh

# Labels
LABEL \
    io.hass.name="Portracker" \
    io.hass.description="A self-hosted, real-time port monitoring and discovery tool" \
    io.hass.arch="armhf|armv7|aarch64|amd64|i386" \
    io.hass.type="addon" \
    io.hass.version="1.0.0" \
    maintainer="Your Name <your.email@example.com>" \
    org.opencontainers.image.title="Portracker Home Assistant Addon" \
    org.opencontainers.image.description="A self-hosted, real-time port monitoring and discovery tool" \
    org.opencontainers.image.vendor="Home Assistant Community Add-ons" \
    org.opencontainers.image.authors="Your Name <your.email@example.com>" \
    org.opencontainers.image.licenses="MIT" \
    org.opencontainers.image.url="https://github.com/ghalpha/homeassistant-addons" \
    org.opencontainers.image.source="https://github.com/ghalpha/homeassistant-addons/tree/main/portracker" \
    org.opencontainers.image.documentation="https://github.com/ghalpha/homeassistant-addons/tree/main/portracker/README.md" \
    org.opencontainers.image.created="2025-01-01T00:00:00+00:00" \
    org.opencontainers.image.revision="1" \
    org.opencontainers.image.version="1.0.0"

CMD [ "/run.sh" ]